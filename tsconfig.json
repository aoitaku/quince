{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
